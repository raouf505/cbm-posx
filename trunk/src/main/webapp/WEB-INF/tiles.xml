<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<!-- templates -->
	
	<definition name="mainTemplate" template="/WEB-INF/jsp/common/templates/mainTemplate.jsp">
		<put-attribute name="styles" value="/WEB-INF/jsp/common/styles.jsp" />
		<put-attribute name="header" value="/WEB-INF/jsp/common/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/jsp/common/footer.jsp" />
	</definition>
	
	<!-- Inventory Items Tiles -->
	
	<definition name="showInventory" extends="mainTemplate">
		<put-attribute name="content" value="/WEB-INF/jsp/inventory/showInventory.jsp" />
		<put-list-attribute name="specificPageStylesList" cascade="true">
			<add-attribute value="/resources/css/inventoryItem.css" />
		</put-list-attribute>
	</definition>
	
	<!-- End Inventory Items Tiles -->
	
</tiles-definitions>